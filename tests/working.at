AT_SETUP([Producing escape sequences])
AT_KEYWORDS([working])
cp $testdir/escape,v 'x$ x,v'
cat <<EOF > 'x$ x'
\$Id: x\044\040x,v 1.1 2001/01/01 01:01:01 username Exp \$
EOF
cat $testdir/escape.experr | sed 's,escape,x$ x,g' > experr
AT_CHECK([[blame 'x$ x']], 0, ignore, experr)
AT_CLEANUP
